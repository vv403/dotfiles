# shellcheck shell=bash

alias comment='sed -i "/^[^#]/ s/.*/# &/"'
alias cp='cp -i'
alias greph='history | grep'
alias ll='ls -l'
alias lh='ll -h'
alias la='ll -a'
alias lr='ll -r'
alias mv='mv -i'
alias rm='rm -i'

alias pkgac='pkg autoclean'
alias pkgi='pkg install'
alias pkgla='pkg list-all'
alias pkgli='pkg list-installed'
alias pkgr='pkg remove'
alias pkgs='pkg show'
